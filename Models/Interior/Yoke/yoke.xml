<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>yoke.ac</path>

  <animation>
    <!-- Oggetti opachi -->
    <object-name>base</object-name>
	<object-name>yokeL</object-name>
    <object-name>yokeR</object-name>
    
    <!-- Oggetti trasparenti -->
  </animation>
  
  <!-- Profondità -->
  <animation>
    <name>YokeComplete</name>
    <object-name>base</object-name>
	<object-name>yokeL</object-name>
    <object-name>yokeR</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>YokeComplete</object-name>
    <property>controls/flight/elevator</property>
    <factor> -10 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <!-- Yoke -->
  <animation>
    <type>rotate</type>
    <object-name>yokeL</object-name>
    <property>controls/flight/aileron</property>
    <factor> -30 </factor>
    <center>
      <x-m>  0.05626 </x-m>
      <y-m> -0.56337 </y-m>
      <z-m>  0.70241 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>yokeR</object-name>
    <property>controls/flight/aileron</property>
    <factor> -30 </factor>
    <center>
      <x-m>  0.05620 </x-m>
      <y-m>  0.59754 </y-m>
      <z-m>  0.70208 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
